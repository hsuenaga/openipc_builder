config BACKPORT_QTNFMAC
	tristate
	depends on !QTNFMAC
	depends on BACKPORT_QTNFMAC_PCIE
	default m if BACKPORT_QTNFMAC_PCIE=m
	default y if BACKPORT_QTNFMAC_PCIE=y

config BACKPORT_QTNFMAC_PCIE
	tristate "Quantenna QSR1000/QSR2000/QSR10g PCIe support"
	depends on !QTNFMAC_PCIE
	default n
	depends on PCI && BACKPORT_CFG80211
	select BACKPORT_QTNFMAC
	depends on FW_LOADER
	depends on CRC32
	help
	  This option adds support for wireless adapters based on Quantenna
	  802.11ac QSR10g (aka Pearl) and QSR1000/QSR2000 (aka Topaz)
	  FullMAC chipsets running over PCIe.

	  If you choose to build it as a module, two modules will be built:
	  qtnfmac.ko and qtnfmac_pcie.ko.
